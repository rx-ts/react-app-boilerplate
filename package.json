{
  "name": "react-app-boilerplate",
  "version": "0.0.0",
  "description": "A simple React App boilerplate, api, auth, i18n and more.",
  "repository": "git+https://github.com/rx-ts/react-app-boilerplate.git",
  "homepage": "https://github.com/rx-ts/react-app-boilerplate#readme",
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.1.1",
  "engines": {
    "node": ">=18.20.4"
  },
  "keywords": [
    "react",
    "react-app",
    "react-boilerplate",
    "react-app-boilerplate"
  ],
  "scripts": {
    "analyze": "ANALYZE=1 pnpm build",
    "build": "pnpm vite build",
    "dev": "nodemon",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint . --cache",
    "lint:ts": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "start": "NODE_ENV=production nodemon",
    "typecov": "type-coverage",
    "vite": "tsx node_modules/vite/bin/vite.js"
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@react-enhanced/hooks": "^0.4.1",
    "@react-enhanced/plugins": "^0.1.1",
    "antd": "^4.24.16",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-router-dom": "^6.10.0",
    "rxjs": "^7.8.1"
  },
  "optionalDependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@1stg/app-config": "^8.1.0",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-strip": "^2.1.0",
    "@types/compression": "^1.7.5",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitery/html": "^0.1.0",
    "@vitery/svgr": "^0.1.0",
    "@welldone-software/why-did-you-render": "^7.0.1",
    "body-parser": "^1.20.2",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^2.0.0",
    "consola": "^2.15.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^10.0.0",
    "express": "^4.19.2",
    "html-minifier-terser": "^7.2.0",
    "http-proxy-middleware": "^2.0.6",
    "less": "^4.2.0",
    "lodash-es": "^4.17.21",
    "node-fs-storage": "^0.1.1",
    "nodemon": "^2.0.22",
    "path-to-regexp": "^6.2.2",
    "proxy-agent": "^5.0.0",
    "rollup": "^3.29.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "tsx": "^3.14.0",
    "type-coverage": "^2.29.1",
    "type-fest": "^3.8.0",
    "typed-query-selector": "^2.9.2",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-style-import": "^2.0.0"
  },
  "browserslist": "extends @1stg/browserslist-config/modern",
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintIgnore": [
    "assets",
    "coverage",
    "dist",
    "/pnpm-lock.yaml",
    "/stats.html",
    "/test.*",
    "!.*.js"
  ],
  "markuplint": {
    "extends": "@1stg/markuplint-config"
  },
  "nodemonConfig": {
    "exec": "tsx server/start",
    "delay": 500,
    "signal": "SIGHUP",
    "ext": ".ts",
    "watch": [
      ".env",
      ".env.*",
      "server",
      "vite.config"
    ],
    "ignore": "server/index.ts"
  },
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "stylelint": {
    "extends": [
      "@1stg/stylelint-config",
      "@1stg/stylelint-config/modules"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "plugin"
          ]
        }
      ],
      "function-name-case": [
        "lower",
        {
          "ignoreFunctions": [
            "varColor"
          ]
        }
      ],
      "function-no-unknown": [
        true,
        {
          "ignoreFunctions": [
            ".adapt-unit",
            "varColor"
          ]
        }
      ],
      "import-notation": "string",
      "no-invalid-position-at-import-rule": null,
      "value-no-vendor-prefix": [
        true,
        {
          "ignoreValues": [
            "box"
          ]
        }
      ]
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNested": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
