{
  "name": "react-app-boilerplate",
  "version": "0.0.0",
  "description": "A simple React App boilerplate, api, auth, i18n and more.",
  "repository": "git+https://github.com/rx-ts/react-app-boilerplate.git",
  "homepage": "https://github.com/rx-ts/react-app-boilerplate#readme",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "react",
    "react-app",
    "react-boilerplate",
    "react-app-boilerplate"
  ],
  "scripts": {
    "analyze": "cross-env ANALYZE=1 pnpm build",
    "build": "pnpm vite build",
    "dev": "nodemon",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint . --cache",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "start": "cross-env NODE_ENV=production nodemon",
    "ts": "node -r ts-eager/register",
    "typecov": "type-coverage",
    "vite": "pnpm ts node_modules/vite/bin/vite.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.19.1",
    "classnames": "^2.3.1",
    "react": "^18.0.0-rc.2",
    "react-dom": "^18.0.0-rc.2",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.2.2",
    "rxjs": "^7.5.5"
  },
  "optionalDependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@1stg/app-config": "^3.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-strip": "^2.1.0",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@svgr/core": "^6.2.1",
    "@types/compression": "^1.7.2",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/express": "^4.17.13",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^17.0.49",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.2.0",
    "@welldone-software/why-did-you-render": "^6.2.3",
    "body-parser": "^1.19.2",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "consola": "^2.15.3",
    "dotenv": "^16.0.2",
    "dotenv-expand": "^8.0.3",
    "express": "^4.17.3",
    "html-minifier-terser": "^7.0.0-alpha.2",
    "http-proxy-middleware": "^2.0.3",
    "less": "^4.1.2",
    "lodash-es": "^4.17.21",
    "node-fs-storage": "^0.1.1",
    "nodemon": "^2.0.15",
    "path-to-regexp": "^6.2.0",
    "postcss": "^8.4.8",
    "postcss-markdown": "^1.2.0",
    "postcss-syntax": "^0.36.2",
    "proxy-agent": "^5.0.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-eager": "^2.0.2",
    "type-coverage": "^2.21.1",
    "typed-query-selector": "^2.6.1",
    "vite": "^2.8.6",
    "vite-plugin-style-import": "^2.0.0"
  },
  "browserslist": "extends @1stg/browserslist-config/modern",
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintIgnore": [
    "assets",
    "dist",
    "/stats.html",
    "/test.*",
    "!.*.js"
  ],
  "markuplint": {
    "extends": "@1stg/markuplint-config"
  },
  "nodemonConfig": {
    "exec": "ts-eager server/start",
    "delay": 500,
    "signal": "SIGHUP",
    "ext": ".ts",
    "watch": [
      ".env",
      ".env.*",
      "server",
      "vite.config"
    ],
    "ignore": "server/index.ts"
  },
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "stylelint": {
    "extends": [
      "@1stg/stylelint-config",
      "@1stg/stylelint-config/modules"
    ],
    "overrides": [
      {
        "files": "**/*.md",
        "customSyntax": "postcss-markdown"
      },
      {
        "files": [
          "**/*.js",
          "**/*.jsx",
          "**/*.ts",
          "**/*.tsx"
        ],
        "customSyntax": "@stylelint/postcss-css-in-js"
      }
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "plugin"
          ]
        }
      ],
      "function-name-case": [
        "lower",
        {
          "ignoreFunctions": [
            "varColor"
          ]
        }
      ],
      "function-no-unknown": [
        true,
        {
          "ignoreFunctions": [
            ".adapt-unit",
            "varColor"
          ]
        }
      ],
      "no-invalid-position-at-import-rule": null,
      "value-no-vendor-prefix": [
        true,
        {
          "ignoreValues": [
            "box"
          ]
        }
      ]
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNested": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
